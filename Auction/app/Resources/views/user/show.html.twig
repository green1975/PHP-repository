{% extends 'layout.html.twig' %}

{% block body %}
<h1>User</h1>

<table>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Zipcode</th>
            <td>{{ user.zipcode }}</td>
        </tr>
    </tbody>
</table>
{{ form_start(form) }}
{{ form_row(form.rating) }}
{{ form_row(form.comment) }}
<input type="submit" value="Create" />
{{ form_end(form) }}


{% for rating in ratinguser %}
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{ rating.user }}</span>
                <p>{{ rating.comment }}</p>
            </div>
            <div class="card-action">
                <p>{{rating.rating}}/5<p>
            </div>
        </div>
    </div>
</div>

{% endfor %}      
<ul>
    <li>
        <a href="{{ path('user_index') }}">Back to the list</a>
    </li>
</ul>
{% endblock %}
